<?xml version="1.0"?>
<openerp>
	<data>	
		<report id="report_partner_label_action"
			string="Partner Label"
			model="res.partner"
			report_type="qweb-pdf"
			name="partner_label.report_partner_label_template"
			/>

		<template id="report_partner_label_template">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="report.external_layout">
						<div class="page">
						    <table class="table table-condensed">
							<!-- Report page content -->
							<thead>
								<tr>
								   <th><strong><span t-field="o.company_id.name" /></strong>
								   <span t-field="o.company_id.partner_id.street" />, <span t-field="o.company_id.partner_id.zip" />, <span t-field="o.company_id.partner_id.city" />
								   <span t-field="o.company_id.partner_id.phone"/>, <span t-field="o.company_id.partner_id.website" />, <span t-field="o.company_id.partner_id.email" /></th>
								</tr>
							</thead>
							<tbody>
							    <tr>
								<td>
								    <strong t-field="o.name" />
									<span t-field="o.street" />, <span t-field="o.zip" />, <span t-field="o.city" />
									<span t-field="o.company_id.partner_id.phone"/>, <span t-field="o.company_id.partner_id.website" />, <span t-field="o.company_id.partner_id.email" />
								</td>
							    </tr>
							</tbody>
						     </table>
						</div>
					</t>
				</t>
			</t>
		</template>

	</data>
</openerp>
